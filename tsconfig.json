{
  "extends": "@shelf/tsconfig/frontend",
  "exclude": [
    "node_modules",
    "**/*.mock.ts",
    "**/*.stub.ts",
    "**/*.test.*"
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "outDir": "lib",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"]
}
